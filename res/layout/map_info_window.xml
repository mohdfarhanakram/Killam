<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/infoWindowImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="#ffcccccc"
            android:scaleType="fitXY" />

         <TextView
          android:id="@+id/infowWindowTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:text="infow window title"
          android:singleLine="true"
          android:textSize="12sp"
          android:textColor="@color/title_bg"
          android:textStyle="bold" />
 
       <TextView
          android:id="@+id/infowWindowDescription"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/listTitle"
          android:layout_marginTop="5dp"
          android:maxLines="4"
          android:layout_toRightOf="@+id/listImage"
          android:text="The List item description"
          android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>